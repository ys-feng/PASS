{
  "model": {
    "hidden_size": 768,
    "num_layers": 3,
    "dropout": 0.1,
    "num_heads": 12
  },
  "training": {
    "batch_size": 32,
    "learning_rate": 3e-5,
    "epochs": 50,
    "warmup_steps": 0.1,
    "weight_decay": 0.01,
    "gradient_accumulation_steps": 1,
    "max_grad_norm": 1.0,
    "seed": 42
  },
  "inference": {
    "llm_model": "gpt-4o",
    "temperature": 0.7,
    "top_p": 0.95,
    "max_tokens": 4096,
    "timeout": 300
  },
  "operators": [
    "ChestXRayClassifierTool",
    "ChestXRaySegmentationTool",
    "LlavaMedTool",
    "XRayVQATool",
    "ChestXRayReportGeneratorTool",
    "XRayPhraseGroundingTool",
    "ChestXRayGeneratorTool",
    "ImageVisualizerTool",
    "DicomProcessorTool"
  ],
  "paths": {
    "model_dir": "model-weights",
    "temp_dir": "temp",
    "output_dir": "outputs",
    "log_dir": "logs",
    "prompts_file": "medrax/docs/system_prompts.txt"
  }
} 